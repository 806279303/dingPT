/* components/clients/clients.wxss */
.wx_clients_container{
    width: 100%;
}
.client_search{
    width: 100%;
    box-sizing: border-box;
    /* border-bottom: 2rpx solid #313131; */
    padding:15rpx 30rpx;
}
.client_search input{
    width: 95%;
    margin:0 auto;
    height: 50rpx;
    border-radius: 20rpx;
    padding-left: 25rpx;
    padding-right: 15rpx;
    font-size: 27rpx;
    color: #313131;
    border:2rpx solid #313131;
}


.client_tb{
    width: 100%;
    box-sizing: border-box;
    border-bottom: 2rpx solid #313131;
}
.client_tb .tr{
    width: 100%;
    display: flex;
    height: 110rpx;
    border-top: 2rpx solid #313131;
    border-left: 2rpx solid #313131;
    box-sizing: border-box;
    font-size: 30rpx;
    color: black;
}
.client_tb .tr .th{
    width: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 2rpx solid #313131;
    box-sizing: border-box;
    padding: 20rpx 0;
}
.client_tb .tr .td{
    width: 25%;
    box-sizing: border-box;
    justify-content: center;
    display: flex;
    align-items: center;
    text-align: center;
    border-right: 2rpx solid #313131;
    box-sizing: border-box;
    padding: 10rpx 0;
    overflow: hidden;
}

.client_tb .tr .tdimg{
    display: flex;
    justify-content: center;
    align-items: center;
}
.client_tb .tr .td .clientImg{
    width: 120rpx;
    height: 50rpx;
    justify-content: center;
    display: flex;
    align-items: center;
}
.client_tb .tr .td .clientImg image{
    width: 100%;
    height: 50rpx;
}
.client_tb .tr .width1{
    width: 25%;
}
.client_tb .tr .width2{
    width: 17%;
}
.client_tb .tr .width3{
    width: 16%;
}
.client_tb .tr .width4{
    width: 25%;
}
.client_tb .tr .width5{
    width: 17%;
}

.addClient{
    width: 100%;
    height: 90vh;
    background-color:whitesmoke;
    position: fixed;
    z-index: 99;
    top:0;
    display: flex;  
    flex-direction: column;
    box-sizing: border-box;
    padding-top: 70rpx;
}
.addClient .backToClient{
    width: 150rpx;
    height: 55rpx;
    position: absolute;
    top:20rpx;
    left:30rpx;
}
.addClient .backToClient button{
    width: 100%;
    height: 100%;
    line-height: 55rpx;
    font-size: 30rpx;
}
.addClient .title{
    width: 100%;
    text-align: center;
    margin-bottom: 50rpx;
    font-size: 50rpx;
    font-weight: bold;
}
.addClient .row{
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: 23rpx;
    align-items: center;
}
.addClient .row .leftcol{
    width: 180rpx;
    text-align: right;
    padding-right: 20rpx;
    /* background-color: aquamarine; */
}
.addClient .row .rightcol{
    text-align: left;
    margin-right: 100rpx;
}
.addClient .row .rightcol input{
    width: 350rpx;
    border:2rpx solid #313131;
}
.addClient .row .uploadIDCard button{
    width: 250rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
}
.addClient .idimg{
    width: 100%;
    display: flex;
    justify-content: center;
}
.addClient .idimg .idImgBox{
    width:70%;
    height: 300rpx;
    border:2rpx solid #313131;
}
.addClient .idimg .idImgBox image{
    width: 100%;
    height: 300rpx;
}
.addClient .subClientInfo{
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 30rpx;
}
.addClient .subClientInfo button{
    width: 150px;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 35rpx;
}